<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sillyrat.ui.MainWindow">

    <children>

        <!-- Chat area fills everything above the input row -->
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    fitToWidth="true"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="45.0">

            <content>
                <VBox fx:id="dialogContainer"
                      fillWidth="true" />
            </content>
        </ScrollPane>

        <!-- Input grows with window width -->
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="45.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.rightAnchor="80.0" />

        <!-- Button sticks to bottom-right -->
        <Button fx:id="sendButton"
                text="Send"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="45.0"
                prefWidth="80.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="0.0" />

    </children>
</AnchorPane>